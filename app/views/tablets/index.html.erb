<div>
  <%= form_tag tablets_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search], placeholder: 'Search for...'%>
      <%= submit_tag "Search"%>
  <% end %>
</div>


<p id="notice"><%= notice %></p>

    <br>

<form class="navbar-form navbar-left" role="search">




  <h1>Listing Tablets</h1>
<%= link_to 'New Tablet', new_tablet_path %>
<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Seria</th>
      <th>Model</th>
      <th>Connection</th>
      <th>Storage</th>
      <th>Color</th>
      <th>Aen</th>
      <th>Partnumber</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tablets.each do |tablet| %>
      <tr>
        <td><%= tablet.brand %></td>
        <td><%= tablet.seria %></td>
        <td><%= tablet.model %></td>
        <td><%= tablet.connection %></td>
        <td><%= tablet.storage %></td>
        <td><%= tablet.color %></td>
        <td><%= tablet.aen %></td>
        <td><%= tablet.partnumber %></td>
        <td><%= link_to 'Show', tablet %></td>
        <td><%= link_to 'Edit', edit_tablet_path(tablet) %></td>
        <td><%= link_to 'Destroy', tablet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</form>