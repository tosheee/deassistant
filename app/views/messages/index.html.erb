<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>
<%= link_to 'New Message', new_message_path %>
<br>

<div class="messages">
    <% @messages.each do |message| %>
      <h2><strong><%= message.title %></strong></h2>
      <pre><%= message.body %></pre>
      <p>Created: <%= time_ago_in_words(message.created_at) %> ago

      <p><%= link_to ' Show ', message %>
        <%= link_to ' Edit ', edit_message_path(message) %><%= link_to ' Destroy ', message, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
        </p>
      <hr>
     <% end %>
</div>


