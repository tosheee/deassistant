<div class="">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group">
    <br />
    <%= f.email_field :email, class: "form-control", placeholder: 'New password', autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-default navbar-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>