<div class="top-whitespace">
</div>

<div class="nav-vertical">
  <%= render 'nav_vertical_brands' %>
</div>



<div class="form-user">
  <%= form_for(@admin_feature_brand_attribute) do |f| %>

      <% unless @name_brand.nil? %>
          <div class="wrapper_show">
          <div id="description-heading">
            <h3>New <%=Admin::Product.find(@product_id).product_name.gsub('s','') %>
              <%= @name_brand.upcase %></h3>

            <div class="nav-products">
            | <%= link_to 'Back', "/product_descriptions/#{@product_id}" %> |
            </div>
          </div>

          </div>
      <% end %>

      <div class="field">
        <p><b></b></p>
        <%= f.hidden_field(:product_id,  required: true, value: @product_id) %>
      </div>

      <div class="field">
          <% unless @name_brand.nil? %>
            <%= f.hidden_field(:features_brands_id, required: true, value: @brand_id)%>
          <% else %>
            <%= link_to 'New Brand', '/admin/features_brands/new'%>
            <%= f.collection_select(:features_brands_id, @brands_product, :id, :brand, :prompt => "Select Brand") %>
        <% end %>
      </div>
      <br>

      <div class="field">
        <%= f.text_field :seria,  class: 'form-control', placeholder: 'Enter Seria' %>
      </div>
      <br>

      <div class="field">
        <%= f.text_area :seria_description,  class: 'form-control', placeholder: 'Enter Seria description' %>
      </div>
      <br>

      <div class="field">
        <%= f.text_field :model,  class: 'form-control', placeholder: 'Enter Model' %>
      </div>
      <br>

      <div class="field">
        <%= f.text_area :aliases, class: 'form-control', placeholder: 'Enter Aliases' %>
      </div>
      <br>

      <div class="field">
        <%= f.text_area :model_description,  class: 'form-control', placeholder: 'Enter Model Description' %>
      </div>
      <br>

      <div class="field">
        <%= f.text_field :ean,  class: 'form-control', placeholder: 'Enter EAN' %>
      </div>
      <br>

      <div class="field">
        <%= f.text_field :pn,  class: 'form-control', placeholder: 'Enter Product Number' %>
      </div>
      <br>

      <div class="field">
        <%= f.text_area :example, class: 'form-control', placeholder: 'Enter Example' %>
      </div>
      <div class="actions">
        <%= f.submit 'Save', class: 'btn btn-default navbar-btn' %>
      </div>
  <% end %>
  <%= link_to 'Back', admin_feature_brand_attributes_path %>
</div>